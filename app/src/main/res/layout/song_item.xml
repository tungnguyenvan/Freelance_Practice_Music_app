<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/song.item.layout"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="@dimen/padding_default"
    android:paddingRight="@dimen/padding_default"
    android:paddingTop="@dimen/padding_4"
    android:paddingBottom="@dimen/padding_4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/song.item.image"
        android:src="@color/colorPrimary"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/song.item.txt.name"
        android:layout_toRightOf="@id/song.item.image"
        android:text="Hello song"
        android:textSize="@dimen/text_size_default"
        android:textColor="@color/textBlack"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/song.item.txt.singer"
        android:text="ca si"
        android:textSize="12sp"
        android:layout_below="@id/song.item.txt.name"
        android:layout_toRightOf="@id/song.item.image"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/colorBack"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_below="@id/song.item.image"
        android:layout_width="match_parent"
        android:layout_height="0.2dp" />

</RelativeLayout>